package test;

public class TestAlgorithm {

	public static void main(String[] args) {
	
		spira(4);
		
	}
	
	static void spira(int n) {
		
		int index = 0;
		for (int i = 1; i <= n; i++) {
			
			for (int j = i; j <= n; j++) {
				System.out.print(" ");
			}
			
			for (int k = index + i; k <= n; k++) {
				System.out.print("*");
			}
			
			
			
			
			System.out.println();
			
		}
		
	}

}
