package test;

public class TestAlgorithm {
	
	public static void main(String[] args) {
		int[] a = {6, 4, 3, 2, 1, 9, 8};
		int key = 3;
		
		int result = 0;
		
		System.out.print("   |");
		for (int i = 0; i < a.length; i++) {
			System.out.printf("%3d", i);
		}
		System.out.println("\n---+-----------------");
		
		for (int i = 0; i < a.length; i++) {
			
			System.out.print("   | ");
			for (int j = 0; j <= i; j++) {
				System.out.print("  ");
			}
			System.out.println("*");
			
			
			if (a[i] == key) {
				result = a[i];
				break;
			}
			
			
			System.out.print(i + "  |");
			
			for (int j = 0; j < a.length; j++) {
				System.out.printf("%3d", j);
			}
			System.out.println();
			
			
		}
		
	}	
}


