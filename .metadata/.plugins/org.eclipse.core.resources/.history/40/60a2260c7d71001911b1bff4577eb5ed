package test;

public class TestAlgorithm {

	public static void main(String[] args) {
		
		int n = 6;
		int[] a = new int[] {5,2,4,1,7,6};
		
		selectionSort(a, n);
		
		for (int aa : a) {
			System.out.println("¼ø¼­: " + aa);
		}
	}
	
	static void selectionSort(int[] a, int n) {
		for (int i = 0; i < n - 1; i++) {
			int min = i;
			
			for (int j = i + 1; j < n; j++) {
				if (a[j] < a[min]) {
					min = j;
				}
			}
			swap(a, i, min);
			
		}
	}
	
	static void swap(int[] a, int idx1, int idx2) {
		int t = a[idx1];
		a[idx1] = a[idx2];
		a[idx2] = t;
	}
	
}