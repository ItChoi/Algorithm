package test;

public class TestAlgorithm {

	public static void main(String[] args) {
	
		spira(4);
		
	}
	
	static void spira(int n) {
		
		for (int i = 0; i < n; i++) {
			for (int j = n; j >= 1; j--) {
				System.out.print(" ");
			}
			for (int k = 1; k <= i ; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
