package test;

public class TestAlgorithm {

	public static void main(String[] args) {
		
		int x = 4;
		
		recur(x);
		
	}
	
	static void recur(int n) {
		int[] temp = new int[100];
		int i = 0;
		while (true) {
			if (n > 0) {
				temp[i++] = n;
				n = n - 1;
				continue;
			}
			
			if (temp.length != 0) {
				if (i != 0) {
				n = temp[i--];
				
				System.out.println("n: " + n);
				n = n - 2;
				continue;
				}
			}
			
			break;
		}
	}
}