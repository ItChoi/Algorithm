package test;

public class TestAlgorithm {
	
	public static void main(String[] args) {

		int result = 0;
		
		int[] a = {1, 2, 3, 5, 6, 8, 9};
		int key = 2;
		
		int length = a.length;
		int start = 0;
		int last = length - 1;
		int middle = (start + last) / 2;
	
		
		System.out.print("  |");
		for (int i = 0; i <= 6; i++) {
			System.out.printf("%2d", i);
		}
		System.out.println("\n--+---------------");
		
		for (int i = 0; i < length; i++) {
			
			System.out.print(middle + " |");
			
			for (int j = 0; j < length; j++) {
				if (start == j) {
					System.out.print("<-");
				} else if (last == j) {
					System.out.print("->");
				} else if (middle == j) {
					System.out.print("+");
				} else {
					System.out.print("  ");
				}
			}
			
			if (a[i]  == key) {
				result = i; 
				break;
			} else if (a[i] > key) {
				start = middle + 1;
			} else {
				last = middle - 1;
			}
			
			System.out.printf("%2d", j);
			
			System.out.println();
		}
		
	}
	
}


